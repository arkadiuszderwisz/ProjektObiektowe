<Page x:Class="ProjektObiektowe.StudentAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektObiektowe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentAdd">

    <Grid>
        <Label 
            Content="Imie" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="136,72,0,0" Height="35" 
            Width="105" 
            Foreground="White" 
            FontFamily="Agency FB" 
            FontSize="20"/>
        <TextBox 
            x:Name="studentImie"
            HorizontalAlignment="Left" 
            Height="35" 
            TextWrapping="Wrap" 
            Text="Jan" 
            VerticalAlignment="Top" 
            Width="173" 
            Margin="258,72,0,0" 
            VerticalContentAlignment="Center" 
            Foreground="#FFBDBDBD"/>
        <Label 
            Content="Nazwisko" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="136,139,0,0" Height="35" 
            Width="105" 
            Foreground="White" 
            FontFamily="Agency FB" 
            FontSize="20"/>
        <TextBox 
            x:Name="studentNazwisko"
            HorizontalAlignment="Left" 
            Height="35" 
            TextWrapping="Wrap" 
            Text="Kowalski" 
            VerticalAlignment="Top" 
            Width="173" 
            Margin="258,139,0,0" 
            VerticalContentAlignment="Center" 
            Foreground="#FFBDBDBD"/>
        <Label 
            Content="Data urodzenia" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="136,207,0,0" Height="35" 
            Width="105" 
            Foreground="White" 
            FontFamily="Agency FB" 
            FontSize="20"/>
        <TextBox 
            x:Name="studentData"
            HorizontalAlignment="Left" 
            Height="35" 
            TextWrapping="Wrap" 
            Text="YYYY-MM-DD" 
            VerticalAlignment="Top" 
            Width="173" 
            Margin="258,207,0,0" 
            VerticalContentAlignment="Center" 
            Foreground="#FFBDBDBD"/>
        <Label 
            Content="Numer grupy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="136,275,0,0" Height="35" 
            Width="105" 
            Foreground="White" 
            FontFamily="Agency FB" 
            FontSize="20"/>
        <TextBox 
            x:Name="studentGrupa"
            HorizontalAlignment="Left" 
            Height="35" 
            TextWrapping="Wrap" 
            Text="DZZa3001" 
            VerticalAlignment="Top" 
            Width="173" 
            Margin="258,275,0,0" 
            VerticalContentAlignment="Center" 
            Foreground="#FFBDBDBD"/>
        <Button 
            Click="akcjaDodawanie_Click"
            Content="Dodaj" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="197" 
            Margin="518,72,0,0" 
            Height="55" 
            RenderTransformOrigin="1.924,-0.125" 
            FontSize="18" 
            FontFamily="Agency FB" 
            Background="#FFDDDDDD" 
            BorderBrush="#FFDDDDDD"/>
        <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Height="65" Margin="513,67,0,0" VerticalAlignment="Top" Width="207"/>
    </Grid>
</Page>
